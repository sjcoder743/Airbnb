<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
