<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid" id="mediaNav">
    <a class="navbar-brand" href="/listings"> <i class="fa-brands fa-airbnb"></i> </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Centered Search Box -->
      <div class="mx-auto">
        <form class="d-flex">
          <input class="form-control me-2 search-input" type="search" placeholder="search destination">
          <button class="btn btn-search" type="submit"> <i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
    </div>
    <div class="navbar-nav ms-auto">
      <a class="nav-link" href="/listings/new">Airbnb your home</a>
      <% if (!currUser) { %>
      <a class="nav-link" href="/signup"><strong>SignUp</strong></a>
      <a class="nav-link" href="/login"><strong>LogIn</strong></a>
      <% } %>
      <% if (currUser) { %>
      <a class="nav-link" href="/logout"><strong>LogOut</strong></a>
      <% } %>
    </div>
  </div>
